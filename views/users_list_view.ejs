<%- include("header") %>

<div style="border: 2px solid green; padding: 20px; width: 1000px; margin: auto; border-radius: 8px;">
    <h1 style="text-align: center; padding: 10px; color: black; border-radius: 8px;">User List</h1>
    <table class="table table-striped" style="width: 100%; margin-top: 20px; border-collapse: collapse;">
        <thead style="background-color: #f2f2f2; color: #333;">
            <tr>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Name</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Email</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Phone Number</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">User Role</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Verified</th>
                <th style="padding: 10px; text-align: center; border-bottom: 1px solid #ddd;">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for (let user of usersList) { %>
                <tr style="background-color: #fff; color: #333;">
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= user.name %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= user.email %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= user.phoneNumber %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= user.userRole %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= user.verified ? "Yes" : "No" %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">
                        <a href="/editUser?userid=<%= user._id %>" style="color: green; text-decoration: none; margin-right: 10px;">Edit</a>
                        <a href="/deleteUser?userid=<%= user._id %>" style="color: red; text-decoration: none;">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("footer") %>
