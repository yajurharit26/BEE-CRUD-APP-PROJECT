<%- include('header'); %>

<div style="border: 2px solid green; padding: 20px; width: 1000px; margin: auto; border-radius: 8px;">
    <h1 style="text-align: center; padding: 10px;color:black; border-radius: 8px;">Order List</h1>
    <table class="table table-striped" style="width: 100%; margin-top: 20px; border-collapse: collapse;">
        <thead style="background-color: #f2f2f2; color: #333;">
            <tr>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">All Products</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">User</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Amount</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Transaction ID</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Address</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Phone Number</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Status</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for (let order of ordersList) { %>
                <tr style="background-color: #fff; color: #333;">
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= order.allProducts %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= order.user %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= order.amount %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= order.transactionId %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= order.address %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= order.phoneNumber %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= order.status %></td>
                    <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">
                        <a href="/editOrder?orderid=<%= order._id %>" style="color: green; text-decoration: none; margin-right: 10px;">Edit</a>
                        <a href="/deleteOrder?orderid=<%= order._id %>" style="color: red; text-decoration: none;">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('footer'); %>
