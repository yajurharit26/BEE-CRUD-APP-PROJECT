<%- include("header") %>

<div id="form-container" style="height: 500px; width: 800px; padding: 30px; margin: 20px auto; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <form action="addCategorySubmit" method="post">
        <table id="form-table" style="width: 100%; border-collapse: separate; border-spacing: 10px; margin-top: 10px;">
            <tr>
                <td id="label-cname" style="text-align: right; padding-right: 20px; font-weight: bold; width: 30%; color: #333;">Category Name:</td>
                <td><input type="text" name="cname" id="input-cname" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" required/></td>
            </tr>
            <tr>
                <td id="label-description" style="text-align: right; padding-right: 20px; font-weight: bold; color: #333;">Category Description:</td>
                <td><textarea name="cDescription" id="input-description" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; height: 100px;" required></textarea></td>
            </tr>
            <tr>
                <td id="label-status" style="text-align: right; padding-right: 20px; font-weight: bold; color: #333;">Category Status:</td>
                <td><input type="text" name="cStatus" id="input-status" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" required/></td>
            </tr>
            <tr>
                <td colspan="2" id="submit-container" style="text-align: center; padding-top: 20px;">
                    <input type="submit" value="Submit" id="submit-button" style="padding: 12px 30px; background-color: #007bff; color: white; border: none; cursor: pointer; border-radius: 5px; font-size: 16px; transition: background-color 0.3s ease;" />
                </td>
            </tr>
        </table>
    </form>
</div> 

<%- include("footer") %>
