<%- include("header") %>

<div style="border: 2px solid green; padding: 20px; width: 1000px; margin: auto; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h1 style="text-align: center; color: #333; margin-bottom: 20px;">Edit Product</h1>
    <form action="/editItemSubmit" method="post">
        <table align="center" class="table table-bordered" style="width: 100%; border-collapse: collapse;">
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Name</td>
                <td><input type="text" name="pName" value="<%= itemData.pName %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Description</td>
                <td><textarea name="pDescription" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;"><%= itemData.pDescription %></textarea></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Price</td>
                <td><input type="number" name="pPrice" value="<%= itemData.pPrice %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Quantity Sold</td>
                <td><input type="number" name="pSold" value="<%= itemData.pSold %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Quantity</td>
                <td><input type="number" name="pQuantity" value="<%= itemData.pQuantity %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Category</td>
                <td><input type="text" name="pCategory" value="<%= itemData.pCategory %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Offer</td>
                <td><input type="text" name="pOffer" value="<%= itemData.pOffer %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Rating</td>
                <td><input type="number" step="0.1" name="pRating" max="5" min="0" value="<%= itemData.pRating %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 10px; font-weight: bold;">Product Status</td>
                <td><input type="text" name="pStatus" value="<%= itemData.pStatus %>" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <input type="hidden" name="itemid" value="<%= itemData._id %>" />
            <tr>
                <td colspan="2" align="center" style="padding-top: 20px;">
                    <input type="submit" value="Update" style="padding: 12px 30px; background-color: green; color: white; border: none; cursor: pointer; border-radius: 5px; font-size: 16px;" />
                </td>
            </tr>
        </table>
    </form>
</div>

<%- include("footer") %>
