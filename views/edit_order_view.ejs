<%- include('header') %>

<div id="edit-order-container" style="border: 2px solid green; padding: 20px; width: 1000px; margin: 20px auto; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h1 id="edit-order-title" style="text-align: center; color: #333; margin-bottom: 20px;">Edit Order</h1>
    <form action="/editOrderSubmit" method="post">
        <table id="edit-order-table" class="table table-bordered" style="width: 100%; border-collapse: collapse;">
            <tr>
                <td id="label-allProducts" style="text-align: right; padding-right: 10px; font-weight: bold;">All Products</td>
                <td><input type="text" name="allProducts" id="input-allProducts" value="<%= orderData.allProducts %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td id="label-user" style="text-align: right; padding-right: 10px; font-weight: bold;">User</td>
                <td><input type="text" name="user" id="input-user" value="<%= orderData.user %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td id="label-amount" style="text-align: right; padding-right: 10px; font-weight: bold;">Amount</td>
                <td><input type="number" name="amount" id="input-amount" value="<%= orderData.amount %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td id="label-transactionId" style="text-align: right; padding-right: 10px; font-weight: bold;">Transaction ID</td>
                <td><input type="text" name="transactionId" id="input-transactionId" value="<%= orderData.transactionId %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td id="label-address" style="text-align: right; padding-right: 10px; font-weight: bold;">Address</td>
                <td><input type="text" name="address" id="input-address" value="<%= orderData.address %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td id="label-phoneNumber" style="text-align: right; padding-right: 10px; font-weight: bold;">Phone Number</td>
                <td><input type="text" name="phoneNumber" id="input-phoneNumber" value="<%= orderData.phoneNumber %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <tr>
                <td id="label-status" style="text-align: right; padding-right: 10px; font-weight: bold;">Status</td>
                <td><input type="text" name="status" id="input-status" value="<%= orderData.status %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" /></td>
            </tr>
            <input type="hidden" name="orderId" value="<%= orderData._id %>" />
            <tr>
                <td colspan="2" id="submit-container" style="text-align: center; padding-top: 20px;">
                    <input type="submit" value="Update" id="submit-button" style="padding: 12px 30px; background-color: green; color: white; border: none; cursor: pointer; border-radius: 5px; font-size: 16px;" />
                </td>
            </tr>
        </table>
    </form>
</div>

<%- include('footer') %>
